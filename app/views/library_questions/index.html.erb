<h2 class="title-divider"><span>StrategicHR <span class="de-em">Library Questions</span></span> <small></small></h2>

<div class="row">
  <div class="col-md-9">
    <% if can? :create, LibraryQuestion %>
      <p><%= link_to "New Question", new_library_question_path, class: 'btn btn-primary btn-mini' %></p>
    <% end %>
  </div>
  <div class="col-md-9">
    <div class='row'>
      <div class='col-md-6'><h3>Question</h3></div>
    </div>
    <div data-controller='infinite-scroll' data-action='scroll@window->infinite-scroll#scroll'>
      <div data-target='infinite-scroll.entries'>
        <%= render 'library_questions' %>
      </div>

      <div data-target='infinite-scroll.pagination'>
        <%== pagy_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
