<% if can? :update, @library_question %>
  <%= link_to "Edit Question", edit_library_question_path(@library_question), class: 'btn btn-primary btn-mini' %>
<% end %>
<% if can? :destroy, @library_question %>
  <%= link_to "Delete Question", @library_question, method: :delete, class: 'btn btn-primary btn-mini btn-danger', data: { confirm: 'Are you sure you want to delete this question?' } %>
<% end %>
<br><br>
<ol class="questions">
  <%= @library_question.content %>
  <% if @library_question.audio.attached? %>
    <div>
      <audio class='audio' controls='controls'>
        <source type='audio/mpeg' src=<%= rails_blob_url(@library_question.audio) %>>
      </audio>
    </div>
  <% end %>
  <div class='preview-images six-grid'>
    <% @library_question.images.each do |image| %>
      <div class='preview-img-wrap'>
        <%= image_tag image %>
      </div>
    <% end %>
  </div>
  <ol class="answers">
    <% @library_question.answers.each do |answer| %>
      <li><%= answer.content %></li>
    <% end %>
  </ol>
</ol>
